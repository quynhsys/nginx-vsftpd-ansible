{{ nginx_log_dir }}/*.log {
        daily
        missingok
        rotate 10
        dateext
        copytruncate
        compress
        delaycompress
        notifempty
        create 640 nginx nginx
        sharedscripts
        postrotate
                [ -f /var/run/nginx.pid ] && kill -USR1 `cat /var/run/nginx.pid`
        endscript
}

